<div class="container">
  <div class="card mx-auto" style="width: 25em;">
    <h4 class="mx-auto fs-5 fw-bold mt-5">URL Shortener</h4>
    <img
      src="/img/ExportedContentImage_00.png"
      class="card-img-top mx-auto mb-4"
      alt="..."
      style="width: 40%;"
    />

    {{#if shortUrl}}

      <div class="link-msg px-3 d-flex flex-column">
        <p class="success fs-6 fw-bold">Success! Please use this link:</p>
        <a
          href="..."
          class="d-block language-html"
          data-lang="html"
          id="short-url"
        >http://localhost:3000/{{shortUrl}}</a>
        <div class="align-self-center mt-3 mb-4">
          <button class="btn btn-primary" onclick="copy()">Copy</button>
          <a href="http://localhost:3000/" class="btn btn-primary">Try More</a>
        </div>
      </div>
      <script>
        function copy(){
        navigator.clipboard.writeText(document.querySelector('#short-url').innerText)
        .then( () => alert('copied')) .catch( error=>console.log(error) ) }
      </script>
    {{else}}

      <div class="card-body" style="width: 100%;">
        <form action="/url_shortener" method="POST" class="d-flex flex-column">
          <input
            type="url"
            name="inputUrl"
            class="form-control align-self-center input"
            placeholder="Input URL here"
            aria-label="Username"
            aria-describedby="basic-addon1"
            style="width: 90%;"
            required
          />
          <button
            type="submit"
            href="#"
            class="btn btn-outline-primary align-self-center mt-3 mb-4"
            style="width: 40%;"
          >Shorten</button>
        </form>
      </div>

    {{/if}}

  </div>
</div>